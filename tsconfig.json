{
    "compileOnSave": false,
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "jsx": "react",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
